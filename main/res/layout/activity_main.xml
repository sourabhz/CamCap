<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capcam.www.capcam.MainActivity">

    <TextureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/cameraImageButton"
        android:id="@+id/textureView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/camera"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        android:id="@+id/cameraImageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/cam_online"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="28dp"
        android:id="@+id/videoImageButton2"
        android:layout_alignTop="@+id/cameraImageButton"
        android:layout_alignParentStart="true"/>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/videoImageButton2"
        android:visibility="invisible"
        android:textColor="#ff0000"
        android:textSize="25dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/chronometer"
        android:layout_alignStart="@+id/videoImageButton2"/>


</RelativeLayout>
